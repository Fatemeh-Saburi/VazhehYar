<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/main_background">

    <ImageView
        android:id="@+id/settingsLogo"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/settings" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="270dp"
        android:layout_height="154dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/gamazad"
        android:text="واژه یار"
        android:textSize="150sp"
        android:textStyle="bold" />

    <!-- دکمه شروع زیر اسم برنامه -->
    <Button
        android:id="@+id/start_button"
        android:layout_width="147dp"
        android:layout_height="81dp"
        android:layout_below="@id/appName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/glass_button"
        android:fontFamily="@font/gamazad"
        android:textSize="35sp"
        android:text="شروع بازی"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/score_logo"
        android:layout_width="47dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/score" />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/score_logo"
        android:fontFamily="@font/gamazad"
        android:text="0"
        android:textSize="50sp" />


</RelativeLayout>
